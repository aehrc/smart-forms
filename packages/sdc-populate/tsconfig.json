{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "lib",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
