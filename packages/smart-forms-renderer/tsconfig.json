{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "lib",
    "declaration": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/stories/**/*", "src/setup-jest.*", "lib", "dist"]
}
