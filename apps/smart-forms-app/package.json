{
  "name": "@aehrc/smart-forms-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Typescript-based React web application implementing FHIR Structured Data Captured (SDC) specification",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && CI=false vite build",
    "test": "jest --config ./jest.config.ts",
    "test:vitest": "vitest",
    "test:vitest:run": "vitest run",
    "test:vitest:watch": "vitest --watch",
    "test:vitest:ui": "vitest --ui",
    "test:vitest:coverage": "vitest run --coverage",
    "test:repopulate": "vitest run src/features/repopulate/__tests__/",
    "test:repopulate:watch": "vitest --watch src/features/repopulate/__tests__/",
    "preview": "vite preview --port 4173",
    "playwright": "npx playwright test",
    "playwright-ui": "npx playwright test --ui",
    "playwright:repop-comprehensive": "npx playwright test repop-comprehensive-initial-expressions.spec.ts",
    "playwright:repop-comprehensive:ui": "npx playwright test repop-comprehensive-initial-expressions.spec.ts --ui",
    "playwright:repop-comprehensive:debug": "npx playwright test repop-comprehensive-initial-expressions.spec.ts --debug",
    "playwright:repop-comprehensive:chromium": "npx playwright test repop-comprehensive-initial-expressions.spec.ts --project=chromium",
    "playwright:repop-visual": "npx playwright test repop-visual-demo.spec.ts --headed --timeout=120000",
    "playwright:repop-visual:slow": "npx playwright test repop-visual-demo.spec.ts --headed --timeout=180000 --workers=1",
    "playwright:repop-visual:chromium": "npx playwright test repop-visual-demo.spec.ts --headed --timeout=120000 --project=chromium",
    "playwright:repop-debug": "npx playwright test repop-visual-demo.spec.ts --grep \"Debug: Date Value Preservation\" --headed --timeout=120000 --project=chromium",
    "playwright:cross-browser": "npx playwright test --project=chromium --project=firefox --project=webkit",
    "test:repop-comprehensive": "npx playwright test repop-comprehensive-initial-expressions.spec.ts --headed --timeout=120000",
    "test:repop-scenarios": "npx playwright test repop-comprehensive-scenarios.spec.ts --headed --timeout=180000",
    "test:repop-scenarios-chromium": "npx playwright test repop-comprehensive-scenarios.spec.ts --project=chromium --headed --timeout=180000",
    "test:repop-all": "npx playwright test repop-comprehensive-initial-expressions.spec.ts repop-visual-demo.spec.ts repop-comprehensive-scenarios.spec.ts --headed --timeout=180000",
    "test:repop-examination": "npx playwright test repop-examination-comprehensive.spec.ts --headed --timeout=180000",
    "test:repop-examination:chromium": "npx playwright test repop-examination-comprehensive.spec.ts --project=chromium --headed --timeout=180000",
    "test:repop-examination:debug": "npx playwright test repop-examination-comprehensive.spec.ts --debug",
    "test:repop-cvd": "npx playwright test repop-cvd-risk-comprehensive.spec.ts --headed --timeout=180000",
    "test:repop-cvd:chromium": "npx playwright test repop-cvd-risk-comprehensive.spec.ts --project=chromium --headed --timeout=180000",
    "test:repop-cvd:debug": "npx playwright test repop-cvd-risk-comprehensive.spec.ts --debug",
    "test:repop-all-forms": "npx playwright test repop-comprehensive-scenarios.spec.ts repop-examination-comprehensive.spec.ts repop-cvd-risk-comprehensive.spec.ts --headed --timeout=180000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aehrc/smart-forms.git"
  },
  "author": "AEHRC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/aehrc/smart-forms/issues"
  },
  "homepage": "https://github.com/aehrc/smart-forms#readme",
  "dependencies": {
    "@aehrc/sdc-assemble": "^2.0.1",
    "@aehrc/sdc-populate": "^4.0.1",
    "@aehrc/smart-forms-renderer": "^1.0.0-alpha.54",
    "@dnd-kit/core": "^6.3.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/material-icons": "^5.2.5",
    "@fontsource/roboto": "^5.2.5",
    "@iconify/react": "^5.2.0",
    "@microlink/react-json-view": "^1.26.1",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^7.0.1",
    "@mui/lab": "^7.0.0-beta.10",
    "@mui/material": "^7.0.1",
    "@mui/x-date-pickers": "^7.28.3",
    "@sentry/react": "^9.3.0",
    "@sentry/tracing": "^7.120.3",
    "@tanstack/react-query": "^5.72.1",
    "@tanstack/react-table": "^8.21.3",
    "allotment": "^1.20.3",
    "dayjs": "^1.11.13",
